{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "src",
    "baseUrl": ".",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node", "vitest"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "vitest.config.ts", "**/*.test.ts", "**/*.spec.ts", "prisma/seed.ts"],
  "include": ["src"]
}
