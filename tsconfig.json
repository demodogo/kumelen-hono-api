{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "src",
    "baseUrl": ".",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node", "vitest"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "vitest.config.ts", "**/*.test.ts", "**/*.spec.ts"],
  "include": ["src"]
}
